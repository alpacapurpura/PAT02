<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_fsm_order_form_patco" model="ir.ui.view">
            <field name="name">fsm.order.form.patco</field>
            <field name="model">fsm.order</field>
            <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='person_id']" position="after">
                    <group string="Equipment">
                        <field name="x_equipment_ids" nolabel="1" widget="many2many_tags" options="{'no_create': True}" domain="[('x_customer_id','=',customer_id)]">
                            <list>
                                <field name="name"/>
                            </list>
                        </field>
                        <field name="customer_id" readonly="1"/>
                        <field name="x_equipment_code" readonly="1"/>
                        <field name="x_equipment_count" readonly="1"/>
                        <field name="x_equipment_categories" readonly="1" widget="many2many_tags"/>
                        <field name="x_all_equipment_codes" readonly="1"/>
                    </group>
                    <div class="oe_button_box" name="equipment_button_box">
                        <button name="action_view_all_equipment" type="object" class="oe_stat_button" icon="fa-cogs">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="x_equipment_count"/></span>
                                <span class="o_stat_text">Equipos</span>
                            </div>
                        </button>
                        <button type="action" name="%(patco_equipment.action_assign_equipment_wizard)d" string="Agregar activo" class="oe_stat_button" icon="fa-plus" invisible="not customer_id or not location_id or not request_early"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_fsm_order_list_patco" model="ir.ui.view">
            <field name="name">fsm.order.list.patco</field>
            <field name="model">fsm.order</field>
            <field name="inherit_id" ref="fieldservice.fsm_order_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='person_id']" position="after">
                    <field name="x_equipment_code" optional="show" string="Equipo"/>
                    <field name="x_equipment_count" optional="show"/>
                    <field name="x_equipment_categories" optional="hide" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <record id="view_fsm_order_search_patco" model="ir.ui.view">
            <field name="name">fsm.order.search.patco</field>
            <field name="model">fsm.order</field>
            <field name="inherit_id" ref="fieldservice.fsm_order_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='person_id']" position="after">
                    <field name="x_equipment_code"/>
                    <field name="x_equipment_ids"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter name="group_equipment" string="Equipo" context="{'group_by': 'x_equipment_code'}"/>
                    <filter name="group_equipment_category" string="CategorÃ­a Equipo" context="{'group_by': 'x_equipment_categories'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>