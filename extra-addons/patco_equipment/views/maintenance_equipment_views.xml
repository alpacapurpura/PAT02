<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_maintenance_equipment_form_patco" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.patco</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="before">
                    <group string="PATCO">
                        <field name="x_patco_code" readonly="1"/>
                        <field name="x_customer_id" domain="[('customer_rank','>',0)]"/>
                        <field name="x_service_location_id" domain="[('parent_id','=',x_customer_id)]"/>
                    </group>
                    <group string="Mobile Access">
                        <field name="x_qr_code" widget="image"/>
                        <field name="x_qr_url" widget="url" readonly="1"/>
                    </group>
                </xpath>

                <xpath expr="//sheet/notebook" position="inside">
                    <page string="DocumentaciÃ³n" name="patco_docs">
                        <group string="Checklists">
                            <group string="Entrada">
                                <field name="x_doc_entry_checklist" widget="html" nolabel="1"/>
                            </group>
                            <group string="Salida">
                                <field name="x_doc_exit_checklist" widget="html" nolabel="1"/>
                            </group>
                        </group>
                        <group string="Documentos">
                            <field name="x_doc_attachment_ids" mode="list,form" nolabel="1" readonly="1">
                                <list string="Documentos" create="0">
                                    <field name="name"/>
                                    <field name="mimetype"/>
                                    <field name="file_size"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>

                <!-- Insertar Marca encima de Modelo -->
                <xpath expr="//field[@name='model']" position="before">
                    <field name="x_brand" string="Marca"/>
                </xpath>
            </field>
        </record>

        <record id="view_maintenance_equipment_list_patco" model="ir.ui.view">
            <field name="name">maintenance.equipment.list.patco</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="x_patco_code" optional="show"/>
                    <field name="x_customer_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="view_maintenance_equipment_search_patco" model="ir.ui.view">
            <field name="name">maintenance.equipment.search.patco</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="x_patco_code"/>
                    <field name="x_customer_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
