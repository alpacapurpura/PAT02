<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_leave_repeated_view_form" model="ir.ui.view">
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='number_of_days']/.." position="after">
                <group name="col_left">
                    <field
                        name="repeat_every"
                        invisible="not holiday_type_repeat"
                        readonly="id != False"
                    />
                    <field
                        name="repeat_mode"
                        invisible="not holiday_type_repeat or not repeat_every"
                        readonly="id != False"
                    />
                    <field
                        name="repeat_end_date"
                        invisible="not holiday_type_repeat or not repeat_every or repeat_mode == 'times'"
                        readonly="id != False"
                    />
                    <field
                        name="repeat_limit"
                        invisible="not holiday_type_repeat or not repeat_every or repeat_mode == 'date'"
                        readonly="id != False"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
